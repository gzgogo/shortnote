.login
  width: 400px;
  background-color: #f3f4e5;
  border-radius: 10px;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  .header
    height: 40px;
    .header1
      height: 40px;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
      //border: 1px solid #40877c;
      background-color: #40877c;
    .header2
      width: 0px;
      height: 0px;
      position: relative;
      top: -1px;
      border-width: 20px 200px 20px 200px;
      border-style: solid;
      border-color: #40877c transparent transparent #40877c;
  .body
    padding-top: 75px;
    padding-bottom: 10px;
    .field-register
      text-align: center;
      margin-top: 20px;
      margin-bottom: 20px;
      a
        color: #40877c;
        font-size: 14px;
        //font-weight: 600;
        //text-decoration underline;
    .field
      text-align: center;
      margin-bottom: 15px;
      &:last-child
        margin-top: 36px;
      .error
        color: red;
      input
        width: 80%;
        height: 36px;
      input[type=text]
        padding-left: 5px;
        background-color: #f3f4e5;
        border-width: 0px 0px 1px 0px;
        border-style: solid;
        border-color: #b0b1a5;
        outline: none;
        &:focus
          border-color: #40877c;
        &::-webkit-input-placeholder /* WebKit browsers */
          font-size: 14px;
        //color: #40877c;
        &:-moz-placeholder
          font-size: 14px;
        //color: #40877c;
        &::-moz-placeholder  /* Mozilla Firefox 19+ */
          font-size: 14px;
        //color:#40877c;
        &:-ms-input-placeholder /* Internet Explorer 10+ */
          font-size: 14px;
      //color: #40877c;
      input[type=button]
        height: 38px;
        background-color: #40877c;
        color: white;
        border: none;
        border-radius: 4px;
